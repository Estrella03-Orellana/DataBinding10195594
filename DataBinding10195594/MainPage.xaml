<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         x:Class="DataBinding10195594.MainPage"
             xmlns:local="clr-namespace:DataBinding10195594">

    <ContentPage.BindingContext>
        <local:Alumno/>
    </ContentPage.BindingContext>
    <StackLayout>
        <Entry Text="{Binding Nombre}" Placeholder="Ingrese su nombre" x:Name="NombreAlumno"/>
        <Label Text="{Binding MostrarNombre}"/> 
    </StackLayout>

</ContentPage>
